<div class="devise-form-wrapper">
  <h2>Log in to PawFinder 🐾</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div class="devise-login-form-bottom-wrapper">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= link_to "Forgot your password?", new_password_path(resource_name)%><br />
      </div>
    </div>

    <div class="form-actions devise-form-button-wrapper">
      <%= f.button :submit, "Log in", class: "devise-form-button" %>
    </div>
  <% end %>
  <hr>
  <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %> today</p>
</div>

<div class="profile-favourites-card">
  <div class="profile-favourites-card-image">
    <%= cl_image_tag(dog.cl_tag, width: 150, height: 150) %>
  </div>
  <div class="profile-favourites-card-info">
    <h5><%= dog.name.capitalize %></h5>
    <p><%= dog.breed %> | <%= dog.colour %> | <%= dog.age %> years old</p>
    <p><%= dog.biography %></p>
     <div class="card-favourite" id="card-favourite">
    <% if dog.favourite.nil? %>
      <i class="fa-regular fa-heart"></i>
    <% else %>
      <% if current_user.favourites.ids.include?(dog.favourite.id) %>
        <i class="fa-solid fa-heart"></i>
      <% else %>
        <i class="fa-regular fa-heart"></i>
      <% end %>
    <% end %>
  </div>
  </div>
</div>

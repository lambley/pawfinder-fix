<%= cl_image_tag(activity.cl_tag, :format => :png, transformation:[ {width: 240, aspect_ratio: 1.5, crop: "fill"},
{radius: "25:0:0:0"} ]) %>
<div class="popup-info" data-controller="scroll">
  <a href="#" data-action="click->scroll#scrollIntoView">
    <h4 id="activity-popup-<%= activity.id %>" data-scroll-target="activity"><%= activity.name %></h4>
  </a>
  <p><%= activity.location.street %>, <%= activity.location.city %>, <%= activity.location.postcode %></p>
</div>

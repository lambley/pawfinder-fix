<div class="container">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">

        <%= cl_image_tag(activity.cl_tag, width: 150, height: 150, class: "img-fluid rounded-start") %>

      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= activity.name.capitalize %></h5>

          <!-- display different card info based on category -->
          <% if activity.category == "restaurant" %>
            <p class="card-text"><%= activity.restaurant_type.capitalize %></p>
          <% elsif activity.category == "park" %>
            <p class="card-text"><%= activity.park_feature.capitalize %></p>
          <% end %>
          <!--end-->

          <p class="card-text"><%= activity.description %></p>
          <p> <%= int_to_stars(activity.average_rating, 10) %> <small><%= activity.reviews.count %> Reviews </small></p>

          <!--Display favourite heart-->
          <% if user_signed_in? %>
            <div class="card-favourite" id="card-favourite">
              <% if activity.favourite.nil? %>
                <i class="fa-regular fa-heart"></i>
              <% else %>
                <% if current_user.favourites.ids.include?(activity.favourite.id) %>
                  <i class="fa-solid fa-heart"></i>
                <% else %>
                  <i class="fa-regular fa-heart"></i>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p>Sign in to <strong>add to favourites</strong></p>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

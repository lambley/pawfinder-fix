<div class="dog-main">
  <div class="dog-top-profile">
    <div class="dog-avatar">
      <h1><%= cl_image_tag(@dog.cl_tag, {class: 'dog-avatar'}) %></h1>
    </div>
    <div class="dog-info">
      <h1 id="dog-info-weight1"><%= @dog.name %></h1>
      <h2 id="dog-info-weight2"><%= @dog.breed %></h2>
      <h4 class="dog-info-weight3"><%= @dog.age %>yrs, <%= @dog.colour %></h4>
      </br>
      <div>
        <div class="card-favourite" id="dog-card-favourite" data-controller="favourite">
          <% if @dog.favourite.nil? %>
            <%= link_to(dog_favourites_path(@dog), data: { turbo_method: "POST" }, dog: @dog.id) do %>
              <i class="fa-regular fa-heart" data-action="click->favourite#addToFavourites" data-favourite-target="heart"></i>
            <% end %>
          <% else %>
            <% if current_user.favourites.ids.include?(@dog.favourite.id) %>
              <%= link_to(dog_favourite_path(id: Favourite.where(user_id: current_user.id, favouritable_id: @dog.id).first.id, dog_id: @dog), data: { turbo_method: "DELETE" }, dog: @dog.id) do %>
                <i class="fa-solid fa-heart" data-action="click->favourite#addToFavourites" data-favourite-target="heart"></i>
              <% end %>
            <% else %>
              <%= link_to(dog_favourites_path(@dog), data: { turbo_method: "POST" }, dog: @dog.id) do %>
                <i class="fa-regular fa-heart" data-action="click->favourite#addToFavourites" data-favourite-target="heart"></i>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </br>
  </br>
  <div class="dog-about">
    <div class="dog-card">
      <h2><%= cl_image_tag("PawFinder/Assets/clear-logo", width: 100, height: 100) %>About:</h2>
      <p class="dog-bio"><%= @dog.biography %></p>
       <div class="about-info">
        <h4>House Trained?</h4>
        <h4>Microchipped?</h4>
        <h4>Spayed/Neutered?</h4>
        <h4>Child Friendly?</h4>
        <h4>Dog Friendly?</h4>
        <h4>Cat Friendly?</h4>
      </div>
      <div class="about-answers">
        <p>Yes</p>
        <p>Yes</p>
        <p>Yes</p>
        <p>Yes</p>
        <p>Yes</p>
        <p>Yes</p>
      </div>
    </div>
  </div>
</div>
